<div class="body-article">
{{#if article.photo}}
{{#each article.photo}}
<div>
<img src="/images/{{filename}}"/>
</div>
{{/each}}
{{/if}}
<div class="horizontal-blue"></div>
<p class="article-time" >{{time}}</p>
<p class="article-category">{{category.name}}</p>
<i class="fab fa-facebook-square fa-2x icon"></i>&nbsp;
    <i class="fab fa-twitter-square fa-2x icon"></i>
<div class="horizontal-blue"></div>
<p>{{article.main_text}}</p>
<p class="article-author">{{author.username}}</p>
<br>
<div class="horizontal-blue"></div>

</div>
